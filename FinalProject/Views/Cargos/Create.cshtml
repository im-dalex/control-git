@model ProyectoFinal.Models.Cargos

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<br />
    <div class="container animated headShake">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header bg-secondary text-white text-center">
                        <h5>Registro de Cargos</h5>
                        <h6>@Html.ActionLink("Ir a lista de Cargos", "Index")</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label" })
                           
                                    @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                            
                            </div>
                            <div class="row">
                                <div class="col-md-12" align="center">
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" id="registro" value="Registrar Cargo" class="btn btn-primary btn-block" />
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
    
    
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
