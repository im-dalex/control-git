@model ProyectoFinal.Models.Departamentos

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<br />
    <div class="container animated headShake">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="text-center">Registro de Departamentos</h5>
                        <h6 class="text-center">
                            @Html.ActionLink("Ver Lista de Departamentos", "Index")
                        </h6>
                    </div>
                    <div class="car-body">
                        
                        <div class="form-horizontal">
                            <div class="container py-1">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.codigoDepartamento, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.codigoDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.codigoDepartamento, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                

                               
                                <div class="row">
                                    <div class="col-md-12" align="center">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Registrar Departamento" class="btn btn-primary btn-block" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               

                            </div>
                            

                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
    
    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
