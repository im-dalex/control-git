@model IEnumerable<ProyectoFinal.Models.Salidas>

@{
    ViewBag.Title = "SalidaMes";
}

<br>
<div class="container animated pulse">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-secondary text-white text-center">
                    <h5>Salida de Empleados por Mes</h5>
                    <h6><a href="@Url.Action("Informes","Home")">Atras</a></h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <label class="control-label">Filtrar por Mes:</label>
                        <div class="row">
                            <div class="col-md-5">


                                @Html.TextBox("SearchString", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-md-5 ">

                                <input type="submit" value="Buscar" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                        <br />
                    <table class="table">
                        <tr class="text-center">
                            <th>
                                @Html.DisplayNameFor(model => model.Empleados.codigoEmpleado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tipoSalida)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Motivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.fechaSalida)
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empleados.codigoEmpleado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipoSalida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Motivo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fechaSalida)
                                </td>

                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
